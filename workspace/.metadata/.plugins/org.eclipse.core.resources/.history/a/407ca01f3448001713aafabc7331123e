package question04;

import java.util.Scanner;

/**
* Program to show some commonly used arithmetic expressions.
*
* @author  Joao Berardo
* @version 1.0
* @since   2017-05-29
*/
public class CustomerLister {
	/**
	 * This is the main method.
	 * @param args Unused.
	 * @return Nothing.
	 */
	public static void main(String[] args) {
		String[] names = { "Cathy", "Ben", "Jorge", "Wanda", "Freddie" };
		double[] customerBalance = new double[5];
		Scanner input = new Scanner(System.in);
				
		for (int i = 0; i < names.length; i ++) {
			System.out.println(names[i] + " balance: ");
			customerBalance[i] = input.nextDouble();
		}
		
		for (int i = 0; i < names.length; i ++) {
			System.out.println("Name\tBalance");
			System.out.println(names[i]);
			customerBalance[i] = input.nextDouble();
		}		
	}
}