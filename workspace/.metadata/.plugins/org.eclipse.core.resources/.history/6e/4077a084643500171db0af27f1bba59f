package question02;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.Ellipse2D;
import javax.swing.JComponent;

public class CirclesComponent extends JComponent {
	   public void paintComponent(Graphics g)
	   {  
	      // Recover Graphics2D
	      Graphics2D g2 = (Graphics2D) g;
	      
	      // Create elipses
	      Ellipse2D.Double circle1	= new Ellipse2D.Double(250 - 40, 250 - 40, 40, 40);
	      Ellipse2D.Double circle2	= new Ellipse2D.Double(250 - 80, 250 - 80, 80, 80);
	      Ellipse2D.Double circle3	= new Ellipse2D.Double(250 - 120, 250 - 120, 120, 120);
	      Ellipse2D.Double circle4	= new Ellipse2D.Double(250 - 160, 250 - 160, 160, 160);
	      Ellipse2D.Double circle5	= new Ellipse2D.Double(250 - 200, 250 - 200, 200, 200);
	      
	      // Debug
	      deb(circle1);
	      deb(circle2);
	      //System.exit(0);
	      
	      // Draw circles
	      g2.setColor(Color.blue);
	      g2.draw(circle5);
	      g2.setColor(Color.red);
	      g2.draw(circle4);
	      g2.setColor(Color.green);
	      g2.draw(circle3);
	      g2.setColor(Color.yellow);
	      g2.draw(circle2);
	      g2.setColor(Color.cyan);
	      g2.draw(circle1);
	   }
	   
	   private static void deb(Ellipse2D.Double circle) {
		   System.out.print("x: " + circle.x + " // ");
		   System.out.print("y: " + circle.y + " // ");
		   System.out.print("w: " + circle.width + " // ");
		   System.out.print("d: " + circle.height);
		   System.out.println();
	   }
}
