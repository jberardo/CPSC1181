package question01;

/**
* Program to show some commonly used arithmetic expressions using arrays.
*
* @author  Joao Berardo
* @version 1.0
* @since   2017-05-29
*/
public class ArrayBasics {
	/**
	 * <h2>Main method</h2>
   * <p>Only method in the program </br>
  *     Does all the work. Shows how to use arrays </p>
	 * @param args Unused
	 * @return Nothing
	 */
	public static void main(String[] args) {
	    // Create an array with 8 elements
		Double[] nums = { 8.0, 4.0, 5.0, 21.0, 9.0, 18.0, 2.0, 100.0 };

		// Print the number of items in the array
		System.out.println("Number of items:" + nums.length);

		// Print the first element in the array
        System.out.println("First element: " + nums[0]);

		// Print the last element in the array
		System.out.println("Last element: " + nums[7]);

		// Print the last item using the array.length method
		System.out.println("Last element(using length -1): " + nums[nums.length - 1]);

		// Print all elements of the array's
        System.out.println("All elements:");
		for (int i = 0; i < 7; i++) {
			System.out.print(nums[i] + ", ");
		}

		System.out.println();

		// Print all elements with label
        System.out.println("All elements (with label):");
		for (int i = 0; i < 7; i++) {
			System.out.print("[" + i + "]" + ": " + nums[i] + ", ");
		}

		System.out.println();

		// Print all elements in reverse order
        System.out.println("Inverse order:");
		for (int i = 7; i > 0; i--) {
			System.out.print("[" + i + "]" + ": " + nums[i] + ", ");
		}

		System.out.println();

		// Print all elements using an enhanced loop
    System.out.println("Enhanced for loop:");
		for (int i = 0; i < nums.length; i++) {
			System.out.print(nums[i] + ", ");
		}
	}
}
