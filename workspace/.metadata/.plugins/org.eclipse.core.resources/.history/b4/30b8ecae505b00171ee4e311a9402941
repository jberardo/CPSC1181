package question01;

public class Billfold {
	Card card1;
	Card card2;
	
	public Billfold()
	{
		
	}
	
	public void addCard(Card card)
	{
		if (card1 == null)
		{
			card1 = new Card(card1.getName());
		}
		else if (card2 == null)
		{
			card2 = new Card(card2.getName());
		}
	}
	
	public String formatCards()
	{
		String output = "[";
		
		if (card1 != null)
		{
			output += card1.format();
		}
		
		if (card1 != null && card2 != null)
		{
			output+= "|";
		}
		
		if (card2 != null)
		{
			output += card2.format();
		}
		
		output += "]";
		
		return output;
	}
}
