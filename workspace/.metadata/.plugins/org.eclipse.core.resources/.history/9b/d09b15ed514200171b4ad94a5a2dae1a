package question02;

import java.util.Scanner;


/**
* Program that prompts a user for 2 integers and prints the smaller one.
*
* @author  Joao Berardo
* @version 1.0
* @since   2017-05-26
*/
public class SmallerNumber {
	/**
	 * Main method. Program initial execution.
	 * @param args Not used.
	 * @return void This method returns void.
	 */
	public static void main(String[] args) {
		// Variables
		int a = 0;
		int b = 0;
		Scanner input = new Scanner(System.in);
		
		// Prompt user for 2 integers
		System.out.print("Please enter the first integer: ");
		// assign first integer to variable a
		a = input.nextInt();
		System.out.println();
		
		System.out.print("Please enter the second integer: ");
		// assign second integer to variable b
		b = input.nextInt();
		System.out.println();
		
		System.out.println("Smaller integer is: " + Math.min(a, b));
	}
}
