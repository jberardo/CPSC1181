package question01;

/**
* Program to show some commonly used arithmetic expressions.
*
* @author  Joao Berardo
* @version 1.0
* @since   2017-05-20
*/
public class Expressions {
	/**
	 * Main method. Program initial execution.
	 * @param args Not used.
	 * @return void This method returns void.
	 */
	public static void main(String[] args)
	{
		// Variables
		int a = 3;
		int b = 4;
		int c = 5;
		int d = 17;
		
		// 3 and 4 are added with sum 7
		// 7 is divided by 5 with quotient 1
		System.out.println((a + b)/ c);
		// 4 is divided by 5 with quotient 0
		// 3 is added to 0 with sum 3
		System.out.println(a + b / c);
		// prints 3 then increment
		System.out.println(a++);
		// prints 4 then decrement
		System.out.println(a--);
		// adds a to 1
		System.out.println(a + 1);
		// d modulo c
		System.out.println(d % c);
		// d divided by c
		System.out.println(d / c);
		// d modulo b
		System.out.println(d % b);
		// d divided by b
		System.out.println(d / b);
		// a divided by d -> (1)
		// d is added to (1) -> (2)
		// b is added to (2)
		System.out.println(d + a / d + b);
		// d is added to a -> (1)
		// d is added to b -> (2)
		// (1) divided by (2)
		System.out.println((d + a) / (d + b));
		// square root of b
		System.out.println(Math.sqrt(b));
		// a power of b
		System.out.println(Math.pow(a, b));
		// absolute value of -a
		System.out.println(Math.abs(-a));
		// maximum number between a and b
		System.out.println(Math.max(a, b));
	}
}
