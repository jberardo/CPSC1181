package question02;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.Ellipse2D;
import javax.swing.JComponent;

public class CirclesComponent extends JComponent {
	   public void paintComponent(Graphics g)
	   {  
	      // Recover Graphics2D
	      Graphics2D g2 = (Graphics2D) g;
	      
	      // Create elipses
	      Ellipse2D.Double circle1	= new Ellipse2D.Double(150, 150, 40, 40);
	      Ellipse2D.Double circle2	= new Ellipse2D.Double(150, 150, 80, 80);
	      Ellipse2D.Double circle3	= new Ellipse2D.Double(150, 150, 120, 120);
	      Ellipse2D.Double circle4	= new Ellipse2D.Double(150, 150, 160, 160);
	      Ellipse2D.Double circle5	= new Ellipse2D.Double(150, 150, 200, 200);
	      
	      // Fill circles
	      Color blue = Color.BLUE;
	      Color red = Color.RED;
	      Color green = Color.GREEN;
	      Color yellow = Color.YELLOW;
	      Color cyan = Color.CYAN;
	      
	      // Debug
	      deb(circle1);
	      deb(circle2);
	      System.exit(0);
	      
	      // Draw circles
	      g2.draw(circle1);
	      g2.draw(circle2);
	      g2.draw(circle3);
	      g2.draw(circle4);
	      g2.draw(circle5);
	   }
	   
	   private static void deb(Ellipse2D.Double circle) {
		   System.out.print("x: " + circle.x);
		   System.out.print("y: " + circle.y);
		   System.out.print("w: " + circle.width);
		   System.out.print("d: " + circle.height);
		   System.out.println();
	   }
}
