package question01;

import java.util.Objects;

/**
 * 
 * 
 * @author Joao Berardo
 * @since 1.0, June, 01 2017
 *
 */
public class Card
{
	// card holder's name
	private String name;

	/**
	 * Creates a new card with empty name
	 */
	public Card()
	{
		name = "";
	}
	
	/**
	 * Creates a new card with given name
	 * @param newName
	 */
	public Card(String newName)
	{
		this.name = newName;
	}
	
	/**
	 * Retrieves card holder's name
	 * @return
	 */
	public String getName()
	{
		return this.name;
	}
	
	/**
	 * Sets card holder's name
	 * @param name
	 */
	public void setName(String name)
	{
		this.name = name;
	}
	
	/**
	 * Check if card is expired
	 * @return
	 */
	public boolean isExpired()
	{
		return false;
	}
	
	/**
	 * Format card for printing
	 * @return
	 */
	public String format()
	{
		return "Card holder: " + this.name;
	}
	
	/**
	 * 
	 */
	public String toString()
	{
		return "Card [Name=" + this.name + "]";
	}
	
    public boolean equals(Object o)
    {
        if (this == o)
        {
        	return true;
        }
        
        if (o == null || getClass() != o.getClass())
        {
        	return false;
        }
        
        Card card = (Card) o;
        
        return Objects.equals(this.name, card.name);
    }
}
