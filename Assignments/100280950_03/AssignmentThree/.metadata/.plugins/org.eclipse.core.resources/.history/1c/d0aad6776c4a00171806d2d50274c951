/**
  Class to represent a Baloon

  @author Joao Berardo
  @version 1.0
  @since June, 04 2017
*/
public class Balloon
{
	// instance variables
	private double volume;
	private double surfaceArea;
	private double radius;
	private double airAmount;
	
	/**
	  Constructor 
	*/
	public Balloon()
	{
		volume = 0.0;
		surfaceArea = 0.0;
		radius = 0.0;
		airAmount = 0.0;
	}
	
	/**
	  Fills the balloon with the given amount of air
	  @param amount Amount of air to be filled
	*/
	public void addAir(double amount)
	{
		airAmount += amount;
		volume = airAmount * 3;
		surfaceArea = airAmount * 2;
		radius = airAmount;
	}
	
	/**
	  Gets the current volume
	  @return balloonn's volume
	*/
	public double getVolume()
	{
		return volume;
	}
	
	/**
	  Gets the surface area
	  @return balloon's surface area
	*/
	public double getSurfaceArea() { // gets the current surface area
		return surfaceArea;
	}
	
	/**
	  Get the radius
	  @return balloon's radius
	*/
	public double getRadius() { // gets the current radius
		return radius;
	}
}
