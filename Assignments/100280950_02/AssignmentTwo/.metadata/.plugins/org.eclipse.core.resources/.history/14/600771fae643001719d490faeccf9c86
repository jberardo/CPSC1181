
public class Bug {
	private int currentPosition;
	private boolean direction = true;
	
	public Bug(int initialPosition) {
		currentPosition = initialPosition;
	}
	
	public void turn() {
		if (direction) {
			direction = false;
		}
	}
	
	public void move() {
		if (direction) {
			currentPosition++;
		} else {
			currentPosition--;
		}
	}
	
	public int getPosition() {
		return currentPosition;
	}
}
