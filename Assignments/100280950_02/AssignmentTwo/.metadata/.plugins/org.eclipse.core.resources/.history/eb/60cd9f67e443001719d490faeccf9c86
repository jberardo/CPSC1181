
public class StudentTester {

	public static void main(String[] args) {
		Student joao = new Student("Joao");
		Student student2 = new Student("Student 2");
		Student student3 = new Student("Student 3");
		
		joao.addQuiz(5);
		joao.addQuiz(7);
		joao.addQuiz(9);
		joao.addQuiz(8);
		joao.addQuiz(6);
		
		student2.addQuiz(7);
		student2.addQuiz(6);
		student2.addQuiz(7);
		student2.addQuiz(8);
		student2.addQuiz(6);
		
		student3.addQuiz(5);
		student3.addQuiz(6);
		student3.addQuiz(6);
		student3.addQuiz(7);
		student3.addQuiz(7);
		
		System.out.println("Student name: " + joao.getName());
		System.out.println("Number of quizzes: " + joao.getNumberOfQuizzes());
		System.out.println("Average Score: " + joao.getAverageScore());
		System.out.println("Total Score: " + joao.getTotalScore());
		System.out.println();
	}
}